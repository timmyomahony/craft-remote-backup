{
    "minimum-stability": "dev",
    "prefer-stable": true,
    "name": "weareferal/remote-backup",
    "description": "Backup your database and assets to a remote location",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "backup"
    ],
    "support": {
        "docs": "https://github.com/weareferal/craft-remote-backup/blob/master/README.md",
        "issues": "https://github.com/weareferal/craft-remote-backup/issues"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Timmy O'Mahony",
            "homepage": "https://weareferal.com"
        }
    ],
    "require": {
        "craftcms/cms": "^3.0.0-RC1",
        "weareferal/remote-core": "dev-feature/module"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../craft-remote-core"
        }
    ],
    "autoload": {
        "psr-4": {
            "weareferal\\remotebackup\\": "src/"
        }
    },
    "extra": {
        "name": "Remote Backup",
        "handle": "remote-backup",
        "hasCpSettings": true,
        "hasCpSection": false,
        "changelogUrl": "https://raw.githubusercontent.com/weareferal/craft-remote-backup/master/CHANGELOG.md",
        "class": "weareferal\\remotebackup\\RemoteBackup"
    },
    "suggest": {
        "aws/aws-sdk-php": "Required for AWS usage",
        "kunalvarma05/dropbox-php-sdk": "Required for Dropbox usage",
        "google/apiclient": "Required for Google Drive usage"
    }
}